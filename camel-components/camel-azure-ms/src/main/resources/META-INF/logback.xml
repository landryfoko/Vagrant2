<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="120 seconds">
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%d{ISO8601} %-5level %class [API=%X{API_NAME}] [Remote_URL=%X{REQUESTING_URL}] [Device_Type=%X{DEVICE_TYPE}] [Transaction_ID=%X{TRANSACTION_ID}] [Session_ID=%X{SESSION_ID}] [Partner_Customer_ID=%X{PARTNER_CUSTOMER_ID}] [FileName_LineNumber=%F:%L] %replace(%m){"([Pp][Aa][Ss][Ss][Ww][Oo][Rr][Dd]&gt;.*&lt;)|(\&quot;[Pp][Aa][Ss][Ss][Ww][Oo][Rr][Dd].*?\&quot;&#58;\&quot;.*?\&quot;)", "Password&gt;*****&lt;"}%n</pattern>
		</layout>
	</appender>

	<!--Daily rolling file appender -->
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>logs/videotion.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>logs/videotion.%d{yyyy-MM-dd}.%i.log</FileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
        	</timeBasedFileNamingAndTriggeringPolicy>			
		</rollingPolicy>
		<encoder>
			<charset>UTF-8</charset>
			<pattern>%d{ISO8601} %-5level %class  [FileName_LineNumber=%F:%L] %replace(%m){"([Pp][Aa][Ss][Ss][Ww][Oo][Rr][Dd]&gt;.*&lt;)|(\&quot;[Pp][Aa][Ss][Ss][Ww][Oo][Rr][Dd].*?\&quot;&#58;\&quot;.*?\&quot;)", "Password&gt;*****&lt;"}%n</pattern>
		</encoder>
		
	</appender>
        
        
	 <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
	    <appender-ref ref="FILE" />
	    <queueSize>5000</queueSize>
	    <includeCallerData>true</includeCallerData>
		<immediateFlush>false</immediateFlush>
		<discardingThreshold>20</discardingThreshold>
	  </appender>
	  

	<root>
		<level value="info" />
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ASYNC" />		
	</root>
	
</configuration>